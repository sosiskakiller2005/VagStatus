<Window x:Class="VagStatus.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VagStatus.Views.Windows"
        mc:Ignorable="d"
        Height="800" Width="1440"
        WindowStartupLocation="CenterScreen" Icon="/Resources/logo.png" >
    <Window.Background>
        <ImageBrush ImageSource="/Resources/Background.png"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".2*" />
            <RowDefinition Height=".3*" />
            <RowDefinition Height=".3*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height=".5*" />
        </Grid.RowDefinitions>

        <Image Grid.Row="1" Source="/Resources/logo.png" HorizontalAlignment="Left"/>
        <Border Grid.Row="3" CornerRadius="5" Background="#FDC101" Width="700" Height="150"/>
        <StackPanel Grid.Row="3" Width="700" Height="100">
            <TextBox Name="IdTb" Text="Код" Background="Transparent" Margin="0 0 200 0"/>
            <Border BorderBrush="Black" Width="500" BorderThickness="2"/>
            <PasswordBox Name="PasswordTb" Password="password" Margin="0 0 200 0"/>
        </StackPanel>
    </Grid>
</Window>
