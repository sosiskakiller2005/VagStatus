<Page x:Class="VagStatus.Views.Pages.WarehousePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VagStatus.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1107"
      Title="WarehousePage">

    <Grid>
        <ListView Name="PartsLb" Width="200" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Машина" DisplayMemberBinding="{Binding Car.Name}"/>
                    <GridViewColumn Header="Запчасть" DisplayMemberBinding="{Binding Part.Name}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
